ENVIRONMENT=local

# DATABASE CONNECTION OPTIONS
# Option 1: Individual connection parameters
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=stylus-cm

# Option 2: Connection URL format (takes precedence if both are provided)
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/stylus-cm

# REDIS CONNECTION OPTIONS
# Option 1: Individual connection parameters
REDIS_HOST=localhost
REDIS_PORT=6380

# Option 2: Connection URL format (takes precedence if both are provided)
# REDIS_URL=redis://localhost:6380

# AUTH
AUTH_NONCE_EXPIRATION=180000

# REAL TIME POLLING
CONTRACT_SMALL_SIZE=800000
CONTRACT_MID_SIZE=1600000
CONTRACT_LARGE_SIZE=2400000

# EVENT FETCHER
EVENT_TYPES="InsertBid,DeleteBid,Pause,Unpause,SetCacheSize,SetDecayRate,Initialized"

# NOTIFICATIONS
BACKOFF_DELAY=10800000 #3 Hours
TELEGRAM_BOT_TOKEN=""
SENDGRID_SENDER_EMAIL=""
SENDGRID_SENDER_NAME="Stylus Monitor Alerts"
SEND_GRID_TOKEN=""

# BULLMQ
BULLMQ_ATTEMPTS=5
BULLMQ_BACKOFF_DELAY=10000
